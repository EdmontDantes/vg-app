<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Video Game App</title>
  <link href="../stylesheets/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <nav id="navbar-example2" class="navbar navbar-light bg-light">
    <a class="navbar-brand" href="/users/logged">Home</a>
    <ul class="nav nav-pills">
      <li class="nav-item">
        <% if (user.userName) { %>
          <p class="nav-link" href="#">Hello <%- user.userName %> </p>
         
        <% } %>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/users/logout">Log Out</a>
      </li>
    </ul>
  </nav>
<br />
<br />
  </div>
    <div class="card-columns">
      <% games.forEach((game) => { %>
        <div class="card" style="width: 18rem;">
          <img class="card-img-top" src="<%- game.image %> " alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title"><%- game.title %></h5>
            <p class="card-text"><%- game.description %></p>
            <a href="#" class="btn btn-primary">Go somewhere</a>
          </div>
        </div>
      <% }) %>

      </div>
      <% include ../partials/scripts.ejs %>>
</body>
</html>